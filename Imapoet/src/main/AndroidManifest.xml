<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.theapp.imapoet" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.theapp.imapoet.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theapp.imapoet.MainMenu"
            android:label="@string/title_activity_main_menu"
            android:parentActivityName="com.theapp.imapoet.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>

        <provider
            android:name="com.theapp.imapoet.MagnetContentProvider"
            android:authorities="com.theapp.imapoet.provider.magnetcontentprovider"
            android:enabled="true"
            android:exported="false"
            android:grantUriPermissions="true" >
        </provider>

        <service
            android:name="com.theapp.imapoet.MediaService"
            android:enabled="true"
            android:exported="false" >
        </service>
    </application>

</manifest>
